@page
@model ColorSchemes
@{
    ViewData["Title"] = "CG | Color Schemes";
}

<div class="row">
    <form id="color-schemes-form" method="post">
        <div class="row">
            <!-- CMYK column -->
            <div class="col-sm-6">
                <label asp-for="ViewModel.Cmyk"></label><br/>
                <input value="@Model.ViewModel.Cmyk" type="color" readonly />
                <div class="row">
                    <div class="d-flex flex-column">
                        <div class="mt-3">
                            <span class="d-inline-block width-30">c</span>
                            <input id="c-input" asp-for="ViewModel.C" class="input-secondary width-50 mr-2" readonly/>
                            <input id="c-range" asp-for="ViewModel.C" type="range" min="0" max="100" step="1" onchange="updateCInput()"/>
                        </div>
                        <div class="mt-3">
                            <span class="d-inline-block width-30">m</span>
                            <input id="m-input" asp-for="ViewModel.M" class="input-secondary width-50 mr-2" readonly/>
                            <input id="m-range" asp-for="ViewModel.M" type="range" min="0" max="100" step="1" onchange="updateMInput()"/>
                        </div>
                        <div class="mt-3">
                            <span class="d-inline-block width-30">y</span>
                            <input id="y-input" asp-for="ViewModel.Y" class="input-secondary width-50 mr-2" readonly/>
                            <input id="y-range" asp-for="ViewModel.Y" type="range" min="0" max="100" step="1" onchange="updateYInput()"/>
                        </div>
                        <div class="mt-3">
                            <span class="d-inline-block width-30">k</span>
                            <input id="k-input" asp-for="ViewModel.K" class="input-secondary width-50 mr-2" readonly/>
                            <input id="k-range" asp-for="ViewModel.K" type="range" min="0" max="100" step="1" onchange="updateKInput()"/>
                        </div>
                    </div>
                </div>
            </div>
            <!-- HSL column -->
            <div class="col-sm-6">
                <label asp-for="ViewModel.Hsl"></label><br/>
                <input value="@Model.ViewModel.Hsl" type="color" readonly />
                <div class="row">
                    <div class="d-flex flex-column">
                        <div class="mt-3">
                            <span class="d-inline-block width-30">h</span>
                            <input id="h-input" asp-for="ViewModel.H" class="input-secondary width-50 mr-2" readonly/>
                            <input id="h-range" asp-for="ViewModel.H" type="range" min="0" max="360" step="1" onchange="updateHInput()"/>
                        </div>
                        <div class="mt-3">
                            <span class="d-inline-block width-30">s</span>
                            <input id="s-input" asp-for="ViewModel.S" class="input-secondary width-50 mr-2" readonly/>
                            <input id="s-range" asp-for="ViewModel.S" type="range" min="0" max="100" step="1" onchange="updateSInput()"/>
                        </div>
                        <div class="mt-3">
                            <span class="d-inline-block width-30">l</span>
                            <input id="l-input" asp-for="ViewModel.L" class="input-secondary width-50 mr-2" readonly/>
                            <input id="l-range" asp-for="ViewModel.L" type="range" min="0" max="100" step="1" onchange="updateLInput()"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row mt-2">
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn button-primary mx-1">Generate</button>
                <a href="https://en.wikipedia.org/wiki/Color_scheme" target="_blank" 
                   class="btn button-secondary mx-1">Theory</a>
                <a href="#" class="btn button-secondary mx-1" onclick="copySite()">Share</a>
                <a href="#" class="btn button-primary mx-1" download>Save</a>
            </div>
        </div>
    </form>
</div>

<script>
    function copySite() {
        navigator.clipboard.writeText('https://localhost:44371/ColorSchemes');    
    }
    function updateCInput() {
        document.getElementById('c-input').value = document.getElementById('c-range').value;
    }
    function updateMInput() {
        document.getElementById('m-input').value = document.getElementById('m-range').value;
    }
    function updateYInput() {
        document.getElementById('y-input').value = document.getElementById('y-range').value;
    }
    function updateKInput() {
        document.getElementById('k-input').value = document.getElementById('k-range').value;
    }
    function updateHInput() {
        document.getElementById('h-input').value = document.getElementById('h-range').value;
    }
    function updateSInput() {
        document.getElementById('s-input').value = document.getElementById('s-range').value;
    }
    function updateLInput() {
        document.getElementById('l-input').value = document.getElementById('l-range').value;
    }
</script>
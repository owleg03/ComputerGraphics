@page
@model MandelbrotSet
@{
    ViewData["Title"] = "CG | Mandelbrot's Set";
}

<div class="row">
    <p class="text-center mt-2 mb-4">Mandelbrot's Set</p>
</div>
<div class="row">
    <form method="post">
        <div class="row">
            <div class="col-sm-6">
                <img height="300" width="300"
                     src="@($"data:image/png;base64,{Convert.ToBase64String(Model.ViewModel.ImageBytes)}")"
                     alt="Mandelbrot's Set Fractal"
                />
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col">
                        <span>Set color:</span>
                    </div>
                    <div class="col-sm-6">
                        <input type="color"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span>Background color:</span>
                    </div>
                    <div class="col">
                        <input type="color"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-flex flex-column">
                <div class="mt-3">
                    <span class="bg-round border-1 mr-2">Width: </span>
                    <input asp-for="ViewModel.Width"/>
                </div>
                <div class="mt-2">
                    <span class="bg-round border-1 mr-2">Height: </span>
                    <input asp-for="ViewModel.Height"/>
                </div>
                <div class="mt-2">
                    <span class="bg-round border-1 mr-2">Iterations:</span>
                    <button class="btn button-secondary">a1</button>
                    <input asp-for="ViewModel.MaxIterations" class="input-secondary"/>
                    <button class="btn button-secondary">a2</button>
                </div>
                <div>
                    <span class="bg-round border-1 mr-2">C:</span>
                    <input class="input-secondary"/>
                    <span>Slider here</span>
                </div>
                <div class="mt-2">
                    <span class="bg-round border-1 mr-2">Scale:</span>
                    <span>Slider here</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn button-primary">Generate</button>
                <a href="#" class="btn button-secondary">Theory</a>
                <a href="#" class="btn button-secondary">Share</a>
                <a href="#" class="btn button-primary">Save</a>
            </div>
        </div>
    </form>
</div>